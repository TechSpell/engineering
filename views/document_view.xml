                        		name="preview"
                        		widget="image"
                        		readonly="1"
                        		nolabel="1"
                        		colspan="2"
                        		img_height="400"
                        		img_width="400"/>
                    </group>
                </page>
                <page string="Linked Parts">
                    <field colspan="4" name="linkedcomponents" nolabel="1"/>
                </page>
                <page string="Notes">
                    <field colspan="4" name="description" nolabel="1"/>
                </page>
                </notebook>
            </form>
