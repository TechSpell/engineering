<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">
    <t t-name="mrp.BomOverviewTable" t-inherit="mrp.BomOverviewTable" t-inherit-mode="extension" owl="1">
        <xpath expr="//table[@class='o_mrp_bom_expandable table']/thead/tr/th[@name='th_mrp_bom_h']" position="after">
            <th class="text-end">Revision</th>
            <th class="text-end">Status</th>
            <th class="text-end">Description</th>
        </xpath>
    </t>

    <t t-name="mrp.BomOverviewLine" t-inherit="mrp.BomOverviewLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr/td[@name='td_mrp_bom']" position="after">
            <td name="td_mrp_bom_revi" class="text-end" t-esc="data.engineering_revision"/>
            <td name="td_mrp_bom_stat" class="text-end" t-esc="data.state"/>
            <td name="td_mrp_bom_desc" class="text-end" t-esc="data.description"/>
        </xpath>
    </t>
</templates>
