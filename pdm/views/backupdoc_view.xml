<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    <menuitem name="Backup Documents View" id="plm_menu_backup" parent="plm_menu" sequence="15"
    		groups="pdm.group_plm_admin"/>

    <record model="ir.ui.view" id="view_plm_backupdoc">
        <field name="name">plm.backupdoc</field>
        <field name="model">plm.backupdoc</field>
        <field name="priority" eval="1"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Backup Document" create="false" edit="false">
 	            <field name="name" invisible="True"/>
                <group colspan="6" col="6">
                    <field name="documentid" readonly="True"/>
                    <field name="revisionid" readonly="True"/>
                    <field name="minorrevision" readonly="True"/>
               	</group>
                <separator string="Other Data" colspan="2"/>
                <group colspan="4" col="4">
                    <field name="create_date" readonly="True"/>
                    <field name="userid" readonly="True"/>
                	<field name="state" select="1"/>
                	<field name="existingfile" select="1"/>
                </group>
                <newline/>
                <separator colspan="4" string="Preview"/>
                <group colspan="2" col="2">
                     <field  name="preview"
                        	widget="image"
                        	readonly="1"
                        	nolabel="1"
                        	img_height="400"
                        	img_width="400"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="plm_backupdoc_search">
        <field name="name">plm.backupdoc</field>
        <field name="model">plm.backupdoc</field>
        <field name="type">search</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Backup Document Set">
				<filter icon="terp-go-month" string="Last Month" separator="1"
				        domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),('create_date','&gt;=',(datetime.date.today()-relativedelta(day=31,months=1)).strftime('%%Y-%%m-%%d'))]"
				        help="Created last month"/>
               	<filter icon="terp-go-month" string="Last Week" separator="1"
                     	domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),('create_date','&gt;=',(datetime.date.today()-relativedelta(weeks=1)).strftime('%%Y-%%m-%%d'))]"
                      	help="Created last week"/>
             	<filter icon="terp-go-month" string="Yesterday" separator="1"
                       	domain="[('create_date','&lt;', datetime.date.today().strftime('%%Y-%%m-%%d 00:00:00')),('create_date','&gt;=',(datetime.date.today()-relativedelta(days=1)).strftime('%%Y-%%m-%%d 00:00:00'))]"
                		help="Created yesterday"/>
            	<filter icon="terp-go-month" string="Today" separator="1"
                      	domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d 23:59:59')),('create_date','&gt;=',datetime.date.today().strftime('%%Y-%%m-%%d 00:00:00'))]"
                     	help="Created today"/>
               	<separator orientation="vertical"/>
            	<field name="documentid"/>
               	<separator orientation="vertical"/>
                <field name="userid" nolabel="1">
					<filter string="Created by me" icon="terp-personal" domain="[('userid', '=', uid)]"/>
                </field>
                <group expand="0" string="Group By...">
                    <filter string="Document Name" icon="terp-personal" domain="[]" context="{'group_by':'documentid'}"/>
                    <filter string="Create by Month" icon="terp-personal" domain="[]" context="{'group_by':'create_date'}"/>
                    <filter string="Creator" icon="terp-personal" domain="[]" context="{'group_by':'userid'}"/>
                </group>
            </search>
     	</field>
    </record>

    <record model="ir.ui.view" id="plm_backupdoc_tree">
        <field name="name">plm.backupdoc</field>
        <field name="model">plm.backupdoc</field>
        <field name="type">tree</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Documents in Check-Out" create="false">
                <field name="userid" select="1"/>
                <field name="create_date" select="1"/>
                <field name="documentid" select="1"/>
                <field name="revisionid" select="1"/>
                <field name="minorrevision" select="1"/>
                <field name="state" select="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_plm_backupdoc">
        <field name="name">Backup Data Set</field>
        <field name="res_model">plm.backupdoc</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field eval="False" name="filter"/>
        <field name="view_id" ref="plm_backupdoc_tree"/>
        <field name="search_view_id" ref="plm_backupdoc_search"/>
    </record>

    <menuitem
        name="Search on Backup Data Set"
        action="action_plm_backupdoc"
        id="menu_backupdoc"
        parent="plm_menu_backup"
		groups="pdm.group_plm_admin"/>
 
 
    <record id="restore_document_button_view" model="ir.ui.view">
        <field name="name">Restore Document</field>
        <field name="model">plm.temporary</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <form string="Restore Selected Document">
            <label string="Are you sure you want to restore this document?" colspan="4"/>
            <separator string="" colspan="4" />
            <group colspan="4" col="6">
            	<button icon="gtk-cancel" special="cancel" string="Cancel"/>
            	<button icon="terp-gtk-go-back-rtl" special="cancel" string="Restore Entry" name="action_restore_document" type="object"/>
            </group>
        </form>
        </field>
    </record>

    <act_window name="Restore Document"
        res_model="plm.temporary"
        src_model="plm.backupdoc"
        view_mode="form"
        view_id="restore_document_button_view"
        target="new"
        key2="client_action_multi"
        groups="pdm.group_plm_admin"
        id="act_restore_document"/>
 
        
</data>
</openerp>