<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <record id="plm_docbom_form_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.form</field>
            <field name="model">plm.document.relation</field>
            <field name="type">form</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form string="Show Document Relation">
                <group colspan="4" col="4">
	                <field name="name" invisible="True"/>
	               	<separator colspan="4" string="Parent Preview"/>
	                <group colspan="2" col="2">
	                    <field name="parent_id" readonly="True"/>
	                    <field name="parent_revision" readonly="True"/>
	                    <field name="parent_state" readonly="True"/>
	                </group>
	                <group colspan="2" col="2">
	                 	<field  name="parent_preview" colspan="2"
								widget="image" 
	                     		readonly="1"
	                        	nolabel="1"
	                        	img_height="400"
	                        	img_width="400"/>
	                </group>
  					<newline/>
	            	<separator colspan="4" string="Child Preview"/>
	                <group colspan="2" col="2">
	                    <field name="child_id" readonly="True"/>
	                    <field name="child_revision" readonly="True"/>
	                    <field name="child_state" readonly="True"/>
	                </group>
	                <group colspan="2" col="2">
	                    <field  name="child_preview" colspan="2"
								widget="image" 
	                     		readonly="1"
	                        	nolabel="1"
	                        	img_height="400"
	                        	img_width="400"/>
	                </group>
                </group>
               </form>
            </field>
        </record>


       <record id="plm_docbom_tree_view" model="ir.ui.view">
            <field name="name">plm.doc.relation.tree</field>
            <field name="model">plm.document.relation</field>
            <field name="type">tree</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Document Relations">
                    <field name="parent_id" select="True"/>
                    <field name="parent_revision" select="True"/>
                    <field name="parent_state" select="True"/>
                    <field name="parent_checkedout"/>
                    <field name="child_id" select="True"/>
                    <field name="child_revision" select="True"/>
                    <field name="child_state" select="True"/>
                    <field name="child_checkedout"/>
                    <field name="configuration"/>
                    <field name="link_kind"  select="True"/>
                    <field name="create_date" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="plm_docbom_search" model="ir.ui.view">
            <field name="name">plm.doc.relation.search</field>
            <field name="model">plm.document.relation</field>
            <field name="type">search</field>
        	<field name="priority" eval="10"/>
            <field name="arch" type="xml">
				<search string="Search on Document Relations">
                    <field name="parent_id"/>
                    <field name="child_id"/>
                    <field name="link_kind" string="Document Relation Kind"/>
					<filter icon="terp-go-month" string="Last Month" separator="1"
					        domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),('create_date','&gt;=',(datetime.date.today()-relativedelta(day=31,months=1)).strftime('%%Y-%%m-%%d'))]"
					        help="Created last month"/>
                   	<filter icon="terp-go-month" string="Last Week" separator="1"
                         	domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),('create_date','&gt;=',(datetime.date.today()-relativedelta(weeks=1)).strftime('%%Y-%%m-%%d'))]"
                          	help="Created last week"/>
                 	<filter icon="terp-go-month" string="Yesterday" separator="1"
                           	domain="[('create_date','&lt;', datetime.date.today().strftime('%%Y-%%m-%%d 00:00:00')),('create_date','&gt;=',(datetime.date.today()-relativedelta(days=1)).strftime('%%Y-%%m-%%d 00:00:00'))]"
                    		help="Created yesterday"/>
                	<filter icon="terp-go-month" string="Today" separator="1"
                          	domain="[('create_date','&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d 23:59:59')),('create_date','&gt;=',datetime.date.today().strftime('%%Y-%%m-%%d 00:00:00'))]"
                         	help="Created today"/>
 					<filter string="Latest" name="latest" icon="terp-stock_symbol-selection" domain="['|',('parent_state', 'not in', ['obsoleted','undermodify']),('child_state', 'not in', ['obsoleted','undermodify'])]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Parent" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'parent_id'}"/>
                        <filter string="Child" icon="terp-mrp" domain="[]" context="{'group_by' : 'child_id'}"/>
                        <filter string="Kind" icon="terp-stock_align_left_24" domain="[]" context="{'group_by':'link_kind'}"/>
                   </group>
                </search>
            </field>
        </record>

    <record model="ir.actions.act_window" id="plm_action_document_relations">
    	<field name="name">Document Relations</field>
    	<field name="res_model">plm.document.relation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Search on Document Relations"
        action="plm_action_document_relations"
        id="menu_document_relations"
        sequence="20"
        parent="plm_document_menu"/>
        
<!-- Tree Structure Down -->

         <record id="plm_docbom_tree_structure" model="ir.ui.view">
            <field name="name">plm.docbom.tree</field>
            <field name="model">plm.document.relation</field>
            <field name="field_parent">child_line_ids</field>
            <field name="arch" type="xml">
                <tree string="Documents Structure">
                    <field name="parent_id" string="Father"/>
                    <field name="parent_revision" string="Revision"/>
                    <field name="parent_state" string="Status"/>
                    <field name="parent_checkedout"/>
                    <field name="child_id" string="Child"/>
                    <field name="child_revision"/>
                    <field name="child_state"/>
                    <field name="child_checkedout"/>
                </tree>
            </field>
        </record>

        <record id="action_docbom_structure" model="ir.actions.act_window">
            <field name="name">Document Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plm.document.relation</field>
            <field name="domain">[('id', 'in', active_ids)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="plm_docbom_tree_structure"/>
        </record>
        
        <record id="ir_docbom_structure" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'plm.document.relation'" name="model"/>
            <field name="name">Bill of Materials Structure</field>
            <field eval="'ir.actions.act_window,'+str(action_docbom_structure)" name="value"/>
        </record>


<!-- Tree Structure Up -->

        <record id="plm_docbom_tree_view_where" model="ir.ui.view">
            <field name="name">plm.docbom.tree.where</field>
            <field name="model">plm.document.relation</field>
            <field name="field_parent">father_line_ids</field>
            <field name="arch" type="xml">
                <tree string="Where Used Documents Structure">
                    <field name="parent_id" string="Father"/>
                    <field name="parent_revision" string="Revision"/>
                    <field name="parent_state" string="Status"/>
                    <field name="parent_checkedout"/>
                    <field name="child_id" string="Child"/>
                    <field name="child_revision"/>
                    <field name="child_state"/>
                    <field name="child_checkedout"/>
                </tree>
            </field>
        </record>

        <record id="docbom_structureWhere" model="ir.actions.act_window">
            <field name="name">Where Used Documents Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plm.document.relation</field>
            <field name="domain">[('id', 'in', active_ids)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="plm_docbom_tree_view_where"/>
        </record>
        
        <record id="ir_docbom_structureWhere" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'plm.document.relation'" name="model"/>
            <field name="name">Where Used Documents Structure</field>
            <field eval="'ir.actions.act_window,'+str(docbom_structureWhere)" name="value"/>
        </record>
        

 <!-- Documents Tree Structure Down -->
        <record id="action_documentbom_structure" model="ir.actions.act_window">
            <field name="name">Document Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plm.document.relation</field>
            <field name="domain">[('parent_id', 'in', active_ids)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="plm_docbom_tree_structure"/>
        </record>
        
        <record id="ir_documentbom_structure" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'plm.document'" name="model"/>
            <field name="name">Bill of Materials Structure</field>
            <field eval="'ir.actions.act_window,'+str(action_documentbom_structure)" name="value"/>
        </record>
 
 <!-- Documents Tree Structure Up -->
 
        <record id="documentbom_structureWhere" model="ir.actions.act_window">
            <field name="name">Where Used Documents Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plm.document.relation</field>
            <field name="domain">[('child_id', 'in', active_ids)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="plm_docbom_tree_view_where"/>
        </record>
        
        <record id="ir_documentbom_structureWhere" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'plm.document'" name="model"/>
            <field name="name">Where Used Documents Structure</field>
            <field eval="'ir.actions.act_window,'+str(documentbom_structureWhere)" name="value"/>
        </record>
        

</data>
</openerp>
