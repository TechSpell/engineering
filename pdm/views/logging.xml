<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <menuitem name="Logged Activities" id="plm_menu_logging" parent="plm_menu" sequence="20"
    		groups="group_plm_admin"/>

    <record model="ir.ui.view" id="plm_logging_search">
        <field name="name">plm.logging.search</field>
        <field name="model">plm.logging</field>
        <field name="type">search</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Checked-Out Document">
                <filter icon="terp-go-month" string="Last Month" separator="1"
                         domain="[('op_date','&lt;=', (datetime.date.today() - relativedelta(days=31,months=1)).strftime('%%Y-%%m-%%d')),('op_date','&gt;=',(datetime.date.today() - relativedelta(days=1,months=1)).strftime('%%Y-%%m-%%d'))]"
                         help="Checked-Out in last month"/>
                <filter icon="terp-go-month" string="Last Week" separator="1"
                         domain="[('op_date','&lt;=', (datetime.date.today()-datetime.timedelta(weeks=1)).strftime('%%Y-%%m-%%d')),('op_date','&gt;=',(datetime.date.today()-datetime.timedelta(weeks=2)).strftime('%%Y-%%m-%%d'))]"
                         help="Checked-Out in last week"/>
                <filter icon="terp-go-month" string="Latest 7 Days" separator="1"
                         domain="[('op_date','&lt;=', (datetime.date.today()).strftime('%%Y-%%m-%%d')),('op_date','&gt;=',(datetime.date.today()-datetime.timedelta(weeks=1)).strftime('%%Y-%%m-%%d'))]"
                         help="Checked-Out in latest 7 days"/>
                 <filter icon="terp-go-month" string="Yesterday" separator="1"
                         domain="[('op_date','&lt;=', (datetime.date.today()-datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d')),('op_date','&gt;=',(datetime.date.today()-datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"
                         help="Checked-Out yesterday"/>
                 <filter icon="terp-go-month" string="Today" separator="1"
                         domain="[('op_date','&lt;=', (datetime.date.today()).strftime('%%Y-%%m-%%d')),('op_date','&gt;=',(datetime.date.today()).strftime('%%Y-%%m-%%d'))]"
                         help="Checked-Out today"/>
                <newline/>
               	<separator orientation="vertical"/>
            	<field name="name"/>
            	<field name="file"/>
            	<field name="userid"/>
               	<separator orientation="vertical"/>
                 <group expand="0" string="Group By...">
                    <filter string="Name" icon="terp-personal" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Operation Date" icon="terp-personal" domain="[]" context="{'group_by':'op_date'}"/>
                    <filter string="Operation Type" icon="terp-personal" domain="[]" context="{'group_by':'op_type'}"/>
                    <filter string="Operator" icon="terp-personal" domain="[]" context="{'group_by':'userid'}"/>
                    <filter string="Entity Type" icon="terp-personal" domain="[]" context="{'group_by':'type'}"/>
                </group>
            </search>
     	</field>
    </record>

    <record model="ir.ui.view" id="plm_logging_tree">
        <field name="name">plm.logging.tree</field>
        <field name="model">plm.logging</field>
        <field name="type">tree</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Activities">
                <field name="name" select="1"/>
                <field name="revision" select="1"/>
                <field name="file" select="1"/>
                <field name="type" invisible="1"/>
                <field name="op_type" select="1"/>
                <field name="op_note" select="1"/>
                <field name="op_date" select="1"/>
                <field name="userid" select="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_plm_logging">
        <field name="name">Activities</field>
        <field name="res_model">plm.logging</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field eval="False" name="filter"/>
        <field name="view_id" ref="plm_logging_tree"/>
        <field name="search_view_id" ref="plm_logging_search"/>
    </record>

    <menuitem
        name="List of Logged Activities"
        action="action_plm_logging"
        id="menu_logging"
        parent="plm_menu_logging"
        groups="group_plm_admin"/>

</data>
</openerp>

